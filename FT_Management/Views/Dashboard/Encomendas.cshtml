@model IEnumerable<FT_Management.Models.Encomenda>

@{
    ViewData["Title"] = "Encomendas";
}

<div class="columns">
    <div class="column">
        <div class="card has-table has-mobile-sort-spaced">
            <header class="card-header">
                <p class="card-header-title">
                    <span class="icon"><i class="mdi mdi-account-multiple"></i></span>
                    Em Atraso
                </p>
                <a href="#" class="card-header-icon">
                    <span class="icon"><i class="mdi mdi-reload"></i></span>
                </a>
            </header>
            <div class="card-content">
                <div class="b-table">
                    <div class="table-wrapper has-mobile-cards">
                        @if (Model.Where(e => e.DataEnvio < DateTime.Now.AddDays(-1) && e.DataEnvio.Year > 1900 || !e.Total).Count() == 0)
                        {
                            <button class="button is-danger is-rounded is-outlined is-fullwidth" disabled>Não foram encontradas encomendas!</button>
                        }
                        else
                        {
                            <table class="table is-fullwidth is-striped is-hoverable">
                                <thead>
                                    <tr>
                                        <th>Encomenda</th>
                                        <th>Cliente</th>
                                        <th>Dias</th>
                                        <th>Tipo</th>
                                        <th>Items</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        if (@item.Total && item.DataEnvio <= DateTime.Now.AddDays(-1) && item.DataEnvio.Year > 1900)
                                        {
                                            <tr class="has-background-danger">
                                                <td data-label="Nº da Encomenda">@item.Id</td>
                                                <td data-label="Cliente">@item.NomeCliente</td>
                                                <td data-label="Dias">@(DateTime.Now.Subtract(item.DataEnvio).Days)</td>
                                                <td class="is-image-cell">
                                                    <div class="image">
                                                        <i class="fa-solid @(item.Total ? "fa-boxes-stacked" : "fa-box")"></i>
                                                    </div>
                                                </td>                                                
                                                <td data-label="Nº Items">@item.NItems</td>
                                            </tr>

                                        }
                                        else
                                        {
                                            foreach (var linha in item.LinhasEncomenda.Where(e => e.DataEnvio <= DateTime.Now.AddDays(-1) && e.DataEnvio.Year > 1900 && !e.Total).ToList())
                                            {
                                                <tr class="has-background-danger">
                                                    <td data-label="Nº da Encomenda">@linha.IdEncomenda</td>
                                                    <td data-label="Cliente">@linha.NomeCliente</td>
                                                    <td data-label="Dias">@(DateTime.Now.Subtract(linha.DataEnvio).Days)</td>
                                                    <td class="is-image-cell">
                                                        <div class="image">
                                                            <i class="fa-solid @(item.Total ? "fa-boxes-stacked" : "fa-box")"></i>
                                                        </div>
                                                    </td> 
                                                    <td data-label="Nº Items">@linha.Produto.Stock_Fisico</td>
                                                </tr>
                                            }
                                        }
                                    }
                                </tbody>
                            </table>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
