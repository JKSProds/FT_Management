@model FT_Management.Models.Cliente

@{
    ViewData["Title"] = "Inventário Loja - " + Model.NomeCliente;
}
<div class="container">
    <div class="columns">
        <div class="column">
            <div class="tile">
                <div class="tile is-parent is-vertical">
                    <article class="tile is-child notification is-info">
                        <p class="title">
                            <span class="icon mr-3">
                                <i class="fa-solid fa-rectangle-list"></i>
                            </span>
                            <span>Inventário de Loja - @Model.NomeCliente</span>
                        </p>
                    </article>
                </div>
            </div>
        </div>
    </div>
</div>
<hr />
@if (Model.Equipamentos.Count() == 0)
{
    <button class="button is-danger is-rounded is-outlined is-large is-fullwidth" disabled>
        Não foram encontradas
        equipamentos!
    </button>
}
else
{
<form asp-action="InventarioLoja" method="POST" id="frmInventario">
    <div class="container">
        <div class="b-table">
            <div class="table-wrapper has-mobile-cards">
                <table class="table is-hoverable is-fullwidth" id="tblInventario">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Equipamentos.First().MarcaEquipamento)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Equipamentos.First().ModeloEquipamento)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Equipamentos.First().NumeroSerieEquipamento)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Equipamentos.First().TipoEquipamento)
                            </th>
                            <th>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Equipamentos.OrderByDescending(e => e.ModeloEquipamento))
                        {
                            <tr style="width:auto" id="@item.EquipamentoStamp">
                                <td data-label="@Html.DisplayNameFor(model => model.Equipamentos.First().MarcaEquipamento)">
                                    <span>@item.MarcaEquipamento</span>
                                </td>
                                <td data-label="@Html.DisplayNameFor(model => model.Equipamentos.First().ModeloEquipamento)">
                                    <span>@item.ModeloEquipamento</span>
                                </td>
                                <td data-label="@Html.DisplayNameFor(model => model.Equipamentos.First().NumeroSerieEquipamento)">
                                    <span><b>@item.NumeroSerieEquipamento</b></span>
                                </td>
                                <td data-label="@Html.DisplayNameFor(model => model.Equipamentos.First().TipoEquipamento)">
                                    <span class="select" style="width:100%">
                                        <select style="width:100%">
                                            <option value="" selected></option>
                                            <option value="Talho">Talho</option>
                                            <option value="Peixaria">Peixaria</option>
                                            <option value="Charcutaria">Charcutaria</option>
                                            <option value="Take-Away">Take-Away</option>
                                            <option value="Padaria">Padaria</option>
                                            <option value="Fruta">Fruta</option>
                                        </select>
                                    </span>
                                </td>
                                <td class="is-actions-cell">
                                    <button class="button is-large is-fullwidth is-success" type="button" onclick="if (this.parentElement.previousElementSibling.children[0].children[0].value != '') {this.parentElement.previousElementSibling.children[0].children[0].disabled = true; this.parentElement.parentElement.classList.add('has-background-success', 'checked'); this.style.display = 'none'; this.nextElementSibling.style.display = 'block'}">
                                        <span class="icon">
                                            <i class="fa-solid fa-check"></i>
                                        </span>
                                    </button>
                                    <button class="button is-large is-fullwidth is-danger" style="display:none" type="button" onclick="this.parentElement.previousElementSibling.children[0].children[0].disabled = false; this.parentElement.parentElement.classList.remove('has-background-success', 'checked'); this.style.display = 'none'; previousElementSibling.style.display = 'block'">
                                        <span class="icon">
                                            <i class="fa-solid fa-trash"></i>
                                        </span>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <br />
        <button type="button" onclick="ExportInventario();" class="button is-info is-large is-fullwidth">
            <span class="icon">
                <i class="fas fa-save"></i>
            </span>
            <span>Validar Inventário</span>
        </button>
    </div>

    <input type="hidden" name="inventario" id="hiddenInventario" />
</form>

}

<script>function ExportInventario() {
        var table = document.getElementById("tblInventario");
        var res = "";

        for (var i = 0, row; row = table.rows[i]; i++) {

            if (table.rows[i].classList.contains('checked')) {
                res += table.rows[i].id + "|" + table.rows[i].cells[3].children[0].children[0].value + ";"
            }
        }
        document.getElementById('hiddenInventario').value = res;
    document.getElementById('frmInventario').submit();
    }</script>