@model IEnumerable<FT_Management.Models.Produto>
@using X.PagedList.Mvc.Core;
@using X.PagedList;

@{
    ViewData["Title"] = "Listagem";
}


<div class="container">
    <div class="columns">
        <div class="column">
            <div class="tile">
                <div class="tile is-parent is-vertical">
                    <article class="tile is-child notification is-info">
                        <p class="title">
                            <span class="icon mr-3">
                                <i class="fas  fa-dolly-flatbed"></i>
                            </span>
                            <span>Produtos</span>
                        </p>
                    </article>
                </div>
            </div>
        </div>
        <div class="column">
            <form asp-action="Index" method="get">
                <div class="field has-addons has-addons-right mx-1">
                    <p class="control has-icons-left">
                        <input type="text" class="input is-info" placeholder="Referência" aria-label="Referência" aria-describedby="button-addon4" name="Ref" value="@ViewData["Ref"]">
                        <span class="icon is-small is-left">
                            <i class="fa-solid fa-arrow-down-1-9"></i>
                        </span>
                    </p>
                    <p class="control has-icons-left">
                        <input type="text" class="input is-info" placeholder="Designação" aria-label="Designação" aria-describedby="button-addon4" name="Desig" value="@ViewData["Desig"]">
                        <span class="icon is-small is-left">
                            <i class="fa-solid fa-arrow-down-a-z"></i>
                        </span>
                    </p>
                </div>
                <div class="field has-addons has-addons-right mx-1">
                    <p class="control has-icons-left" style="max-width:155px">
                        <span class="select">
                            <select id="lstarmazens" asp-items="ViewBag.Armazens" onchange="submitdata()">
                            </select>
                        </span>
                        <input type="hidden" id="hiddenSelectedArmazem" name="Armazem" value="@ViewData["Armazem"]" />
                        <span class="icon is-small is-left">
                            <i class="fa-solid fa-warehouse"></i>
                        </span>
                    </p>
                    <p class="control has-icons-left" style="max-width:155px">
                        <span class="select">
                            <select id="lstfornecedores" asp-items="ViewBag.Fornecedores" selected onchange="submitdata()">
                            </select>
                        </span>
                        <input type="hidden" id="hiddenSelectedFornecedor" name="Fornecedor" value="@ViewData["Fornecedor"]" />
                        <span class="icon is-small is-left">
                            <i class="fa-solid fa-building-user"></i>
                        </span>
                    </p>
                    <p class="control">
                        <button type="submit" class="button is-info is-outlined">
                            <span class="icon">
                                <i class="fas fa-search fa-lg"></i>
                            </span>
                            <span>Pesquisar</span>
                        </button>
                    </p>

                    <p class="control">
                        <a asp-action="Index" class="button">
                            <span class="icon">
                                <i class="fas fa-backspace"></i>
                            </span>
                            <span>Limpar</span>
                        </a>
                    </p>
                </div>
            </form>
        </div>
    </div>
</div>
<hr />

@if (Model.Count() == 0)
{
    <br />
    <button class="button is-danger is-fullwidth is-disabled">Não foram encontrados produtos!</button>
}
else
{
    <div class="container">
    <div class="b-table">
    <div class="table-wrapper has-mobile-cards"> 
        <table class="table is-hoverable is-fullwidth" id="tblProdutos">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Ref_Produto)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Designacao_Produto)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Stock_Fisico)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Stock_PHC)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Stock_Rec)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Stock_Res)
                    </th>
                    <th>
                        <a id="btnEdit" class="button is-info is-fullwidth" disabled onclick="Edit()" href="javascript:;"><i class="fas fa-pencil-alt"></i></a>
                        <a id="btnCloseEdit" class="button is-info is-fullwidth" disabled onclick="Edit()" href="javascript:;" style="display:none;"><i class="fas fa-times-circle"></i></a>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr style="width:auto">
                        <td data-label="@Html.DisplayNameFor(model => model.Ref_Produto)" class="Ref_Produto" onclick="window.open('@(Url.Action("Detalhes", "Produtos", new { id = item.Ref_Produto, armazemid=item.Armazem_ID, target="_blank" }))')">
                            <span>@item.Ref_Produto</span>
                        </td>
                        <td data-label="@Html.DisplayNameFor(model => model.Designacao_Produto)" class="Designacao_Produto" onclick="window.open('@(Url.Action("Detalhes", "Produtos", new { id = item.Ref_Produto, armazemid=item.Armazem_ID, target="_blank" }))')">
                            <span>@item.Designacao_Produto</span>
                        </td>
                        <td data-label="@Html.DisplayNameFor(model => model.Stock_Fisico)" class="Stock_Fisico">
                            <span onclick="window.open('@(Url.Action("Detalhes", "Produtos", new { id = item.Ref_Produto, armazemid=item.Armazem_ID, target="_blank" }))')">@item.Stock_Fisico</span>
                            <input type="text" value="@item.Stock_Fisico" style="display:none" class="input-group-text txtstockfis" />
                        </td>
                        <td data-label="@Html.DisplayNameFor(model => model.Stock_PHC)" class="Stock_PHC" onclick="window.open('@(Url.Action("Detalhes", "Produtos", new { id = item.Ref_Produto, armazemid=item.Armazem_ID, target="_blank" }))')">
                            <span>@item.Stock_PHC</span>
                        </td>
                        <td data-label="@Html.DisplayNameFor(model => model.Stock_Rec)" class="Stock_Rec" onclick="window.open('@(Url.Action("Detalhes", "Produtos", new { id = item.Ref_Produto, armazemid=item.Armazem_ID, target="_blank" }))')">
                            <span>@item.Stock_Rec</span>
                        </td>
                        <td data-label="@Html.DisplayNameFor(model => model.Stock_Res)" class="Stock_Res" onclick="window.open('@(Url.Action("Detalhes", "Produtos", new { id = item.Ref_Produto, armazemid=item.Armazem_ID, target="_blank" }))')">
                            <span>@item.Stock_Res</span>
                        </td>
                        <td style="min-width: 240px" class="is-actions-cell">
                            <div class="buttons">
                                <a class="update btn btn-outline-primary btn-lg" href="javascript:;" style="display:none;"><i class="fas fa-save"></i></a>
                                <a class="button is-outlined is-primary is-small printpeq" onclick="window.open('@Url.Action("PrintPeq", "Produtos", new { id = item.Ref_Produto, armazemid=item.Armazem_ID, target="_blank" })')"><i class="fa-solid fa-qrcode"></i></a>
                                <a class="button is-outlined is-normal is-primary printqr" onclick="window.open('@Url.Action("PrintQr", "Produtos", new { id = item.Ref_Produto, armazemid=item.Armazem_ID, target="_blank" })')"><i class="fa-solid fa-qrcode"></i></a>
                                <a class="button is-outlined is-primary" onclick="window.open('@Url.Action("PrintPeqMulti", "Produtos", new { id = item.Ref_Produto, armazemid=item.Armazem_ID, target="_blank" })')"><i class="fas fa-notes-medical"> x8</i></a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        </div>
        </div>
    </div>
    <br />
    <div class="container">
        @Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", "Produtos", new { page, Ref = @ViewData["Ref"], Desig = @ViewData["Desig"], Armazem = @ViewData["Armazem"] }))
    </div>

}

<input type="hidden" id="hiddenRef" />

<script>

    //Edit event handler.
    function Edit() {
        //alert("Clicou");

        var btns = document.querySelectorAll('.update');

        Array.prototype.forEach.call(btns, function addClickListener(btn) {
            btn.addEventListener('click', function (event) {
                var row = $(this).closest("tr");
                $("td", row).each(function () {
                    if ($(this).find("input").length > 0) {

                        var span = $(this).find("span");
                        var input = $(this).find("input");
                        span.html(input.val());
                    }
                });

                var produto = {
                    refproduto: row.find(".Ref_Produto").find("span").html(),
                    stockfisico: row.find(".Stock_Fisico").find("span").html(),
                    armazemid: document.getElementById("hiddenSelectedArmazem").value
                };


                $.ajax({
                    type: "POST",
                    url: "/Produtos/EditarStockFisico",
                    data: produto,
                    traditional: false,
                    success: function (result) {
                    $(function () {
                        bulmaToast.toast({
                          message: 'Stock atualizado com sucesso!',
                          type: 'is-success',
                          closeOnClick: true,
                          pauseOnHover: true,
                          opacity: 0.8,
                          duration: 5000
                        })
                    });
                    }
                });
            });
        });

        var btn1 = document.getElementById("btnEdit");
        var btn2 = document.getElementById("btnCloseEdit");
        $("td").each(function () {
            var row = $(this).closest("tr");
            if ($(this).find("input").length > 0) {

                if (btn1.style.display === "none") {
                    row.find(".update").hide();
                    row.find(".delete").hide();
                    row.find(".printqr").show();
                    row.find(".printpeq").show();
                    row.find(".txtstockfis").hide();
                    $(this).find("span").show();

                } else {
                    row.find(".update").show();
                    row.find(".delete").show();
                    row.find(".printqr").hide();
                    row.find(".printpeq").hide();
                    row.find(".txtstockfis").show();
                    $(this).find("span").hide();

                }
            }
        });
        if (btn1.style.display === "none") {
            btn1.style.display = "block";
            btn2.style.display = "none";
        } else {
            btn1.style.display = "none";
            btn2.style.display = "block";
        }
        $(this).hide();
    }
    function submitdata() {
        document.getElementById("hiddenSelectedArmazem").value = document.getElementById("lstarmazens").value;
        document.getElementById("hiddenSelectedFornecedor").value = document.getElementById("lstfornecedores").value;
        $('form').submit();
    }
document.getElementById("lstfornecedores").value = document.getElementById("hiddenSelectedFornecedor").value;
document.getElementById("lstarmazens").value = document.getElementById("hiddenSelectedArmazem").value;

</script>
