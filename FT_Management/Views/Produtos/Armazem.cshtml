@model IEnumerable<FT_Management.Models.Movimentos>

@{
    ViewData["Title"] = "Movimentos - " + ViewData["Utilizador"];
}

<div class="pageloader is-info" id="pageloader"><span class="title">A carregar ...</span></div>
<div class="container">
    <div class="columns">
        <div class="column">
            <div class="tile">
                <div class="tile is-parent is-vertical">
                    <article class="tile is-child notification is-info">
                        <p class="title"><b>@ViewData["Utilizador"]</b> - Armazém Nº @ViewData["IdArmazem"]</p>
                    </article>
                </div>
            </div>
        </div>
        <div class="column">
            <form asp-action="Armazem" method="get">
                <div class="field has-addons has-addons-right mx-1">
                    <p class="control has-icons-left" style="width:100%">
                        <span class="select" style="width:100%">
                            <select id="lstguias" asp-items="ViewBag.Guias" style="width:100%" onchange="submitdata()">
                            </select>
                        </span>
                        <span class="icon is-small is-left">
                            <i class="fa-solid fa-file-invoice"></i>
                        </span>
                    </p>
                </div>
                <div class="buttons has-addons is-right">
                    <a class="button is-info is-outlined" href="~/Produtos?Armazem=@ViewData["IdArmazem"]">
                        <span class="icon">
                            <i class="fas  fa-dolly-flatbed"></i>
                        </span>
                        <span>Stock</span></a>
                    <a class="button is-info" onclick="Bulma('#modalGerarPedidoTransferencia').modal().open();">
                        <span class="icon">
                            <i class="fas fa-file-alt"></i>
                        </span>
                        <span>Nova Transferência</span></a>
                    <a class="button is-success" onclick="Bulma('#modalGerarGuiaGlobal').modal().open();">
                        <span class="icon">
                            <i class="fa-solid fa-file-export"></i>
                        </span>
                        <span>Guia Global</span></a>
                </div>
                <input hidden id="hiddenSelectedGT" name="gt" value="@ViewData["GT"]" />
            </form>
        </div>
    </div>
</div>
<hr />


@if (Model.Count() == 0)
{
    <br />
    <button class="button is-danger is-fullwidth is-disabled">Não foram encontrados movimentos!</button>
}
else
{
    <div class="container">
    <div class="b-table">
        <div class="table-wrapper has-mobile-cards">
            <table class="table is-hoverable is-fullwidth" id="tblProdutos">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.IdFolhaObra)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.NomeCliente)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.RefProduto)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Designacao)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Quantidade)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DataMovimento)
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                        {
                            <tr style="width:auto"
                                onclick="window.open('@(Url.Action("Detalhes", "FolhasObra", new { Id = item.IdFolhaObra, target="_blank" }))')">
                                <td data-label="@Html.DisplayNameFor(model => model.IdFolhaObra)">
                                    <span>@item.IdFolhaObra</span>
                                </td>
                                <td data-label="@Html.DisplayNameFor(model => model.NomeCliente)">
                                    <span>@item.NomeCliente</span>
                                </td>
                                <td data-label="@Html.DisplayNameFor(model => model.RefProduto)">
                                    <span>@item.RefProduto</span>
                                </td>
                                <td data-label="@Html.DisplayNameFor(model => model.Designacao)">
                                    <span>@item.Designacao</span>
                                </td>
                                <td data-label="@Html.DisplayNameFor(model => model.Quantidade)">
                                    <span>@item.Quantidade</span>
                                </td>
                                <td data-label="@Html.DisplayNameFor(model => model.DataMovimento)">
                                    <span>@item.DataMovimento</span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
<br />


<div id="modalGerarGuiaGlobal" class="modal">
    <div class="modal-background"></div>
    <div class="modal-card">
        <header class="modal-card-head">
            <p class="modal-card-title">Gerar Guia Global</p>
            <button type="button" class="delete" aria-label="close"></button>
        </header>
        <section class="modal-card-body">
            <div class="modal-body">
                <p>Tem a certeza que deseja gerar uma guia global do Armazém Nº @ViewData["IdArmazem"]?</p>
            </div>
        </section>
        <footer class="modal-card-foot">
            <button class="button is-info is-fullwidth is-large" type="button"
                onclick="GerarGuiaGlobal(@ViewData["IdArmazem"])">
                <span class="icon">
                    <i class="fa-solid fa-file-export"></i>
                </span>
                <span>Gerar</span>
            </button>
            <button type="button" class="button is-large is-fullwidth is-danger"
                onclick="Bulma('#modalGerarGuiaGlobal').modal().close();" href="javascript:;">
                <span class="icon">
                    <i class="fa-regular fa-circle-xmark"></i>
                </span>
                <span>Fechar</span>
            </button>
        </footer>
    </div>
</div>

<div id="modalGerarPedidoTransferencia" class="modal">
    <div class="modal-background"></div>
    <div class="modal-card">
        <header class="modal-card-head">
            <p class="modal-card-title">Novo Pedido de Transferências</p>
            <button type="button" class="delete" aria-label="close"></button>
        </header>
        <section class="modal-card-body">
            <div class="modal-body">
                <p>Tem a certeza que deseja gerar um documento de Pedido de Transferências para o Armazém Nº
                    @ViewData["IdArmazem"]?</p>
            </div>
            &nbsp;
            <div class="form-check form-group col">
                <label class="switch is-rounded">
                    <input type="checkbox" id="chkPecas">
                    <span class="check is-info"></span>
                    <span class="control-label">Pre-carregar com as peças selecionadas?</span>
                </label>
            </div>
        </section>
        <footer class="modal-card-foot">
            <a class="button is-info is-fullwidth" type="button" onclick="GerarTransferencia();" <span class="icon">
                <i class="fa-solid fa-file-export"></i>
                </span>
                <span>Novo Documento</span>
            </a>
            <button type="button" class="button is-fullwidth is-danger"
                onclick="Bulma('#modalGerarPedidoTransferencia').modal().close();" href="javascript:;">
                <span class="icon">
                    <i class="fa-regular fa-circle-xmark"></i>
                </span>
                <span>Fechar</span>
            </button>
        </footer>
    </div>
</div>

<script>
    function submitdata() {
        document.getElementById("hiddenSelectedGT").value = document.getElementById("lstguias").value;
        $('form').submit();
    }
    document.getElementById("lstguias").value = document.getElementById("hiddenSelectedGT").value;

    function GerarGuiaGlobal(id) {
        document.getElementById('pageloader').classList.add('is-active');
        Bulma('#modalGerarGuiaGlobal').modal().close();
        $.ajax({
            url: '/Produtos/GerarGuiaGlobal/' + id,
            type: "POST",
            success: function (response) {
                if (response[0] == 1) {
                    notify("Guia gerada com sucesso! Por requisite a impressão/envio da sua guia! " + response[1])
                } else {
                    notifyError("Ocorreu um erro ao gerar a sua guia. Por favor tente novamente! " + response[1]);
                }
                document.getElementById('pageloader').classList.remove('is-active');
            },
            error: function (response) {
                notifyError(response);
                document.getElementById('pageloader').classList.remove('is-active');
            },
            failure: function (response) {
                notifyError(response);
                document.getElementById('pageloader').classList.remove('is-active');
            }
        });
    }

    function GerarTransferencia() {
        document.getElementById('pageloader').classList.add('is-active');
        Bulma('#modalGerarPedidoTransferencia').modal().close();

        var id = '@ViewData["GT"].ToString().Replace("/", "|")';
        var armazem = '@ViewData["IdArmazem"]';
        var load = document.getElementById('chkPecas').checked ? 1 : 0;

        window.location.href = "/Dossiers/CriarDossierTransferencia/" + id + "?armazem=" + armazem + "&load=" + load;
    }

</script>