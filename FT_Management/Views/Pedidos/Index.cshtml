@model IEnumerable<FT_Management.Models.TrelloQuadros>

@{
    ViewData["Title"] = "Pedidos";
}

<h1>Quadros - Pedidos</h1>

<hr />

@if (Model.Count() == 0)
{
    <br />
    <button class="btn btn-lg btn-danger btn-block disabled" style=" font-size: 80%; border-radius: 5rem; letter-spacing: .1rem; font-weight: bold; padding: 1rem; transition: all 0.2s;">Não foram encontrados quadros!</button>
}
else
{
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-sm-6 " style="margin-bottom: 10px">
            <div class="card border-success mb-3">
                <div class="card-header"> <h3>@item.NomeQuadro </h3></div>
                <div class="card-body text-primary">
                    <p class="card-text">
                        <a class="btn btn-info btn-lg btn-block text-black-50" style=" font-size: 80%; border-radius: 5rem; letter-spacing: .1rem; font-weight: bold; padding: 1rem; transition: all 0.2s;" onclick="location.href = '@(Url.Action("ListaPedidos", "Pedidos", new { idQuadro = item.IdQuadro }))'"><i class="fas fa-info float-left" style="margin-top:5px"></i> Lista</a>
                    </p>
                    <div class="card-footer">
                        <small>
                            Data da Ultima Atividade: @item.DataUltimaAtividade
                        </small>
                    </div>
                </div>
            </div>
        </div>
    }
    </div>
    }
