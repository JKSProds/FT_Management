@model IEnumerable<FT_Management.Models.Utilizador>

@{
    ViewData["Title"] = "Pedidos";
}

<style>
    .circle {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        font-size: 50px;
        font-family: roboto, arial;
        color: black;
        line-height: 100px;
        text-align: center;
        background: grey;
        margin: auto;
        margin-bottom: 10px;
    }
</style>
<div class="row">
    <div class="col-lg-8">
        <h1>Marcações Técnicas</h1>
    </div>
    <div class="col-lg-4">
        <a class="btn btn-outline-primary btn-lg btn-block"  onclick="location.href = '@(Url.Action("Calendario", "Pedidos"))'"><i class="far fa-calendar-alt" style="margin-top:5px"></i> Calendário</a>
    </div>
</div>
<hr />
<br />

@if (Model.Count() == 0)
{
    <br />
    <button class="btn btn-lg btn-danger btn-block disabled" style=" font-size: 80%; border-radius: 5rem; letter-spacing: .1rem; font-weight: bold; padding: 1rem; transition: all 0.2s;">Não foram encontrados Técnicos!</button>
}
else
{
<div class="row">
    @foreach (var item in Model)
    {

        <div class="col-xl-3 col-sm-6 mb-5 text-center" onclick="location.href = '@(Url.Action("ListaPedidos", "Pedidos", new { IdTecnico = item.Id }))'">
            <div class="bg-white rounded shadow-sm py-5 px-4">
                <div class="circle">
                    <p>@item.Iniciais</p>
                </div>
                <h5 class="mb-0">@item.NomeCompleto</h5>
            </div>
        </div>

        @*<div class="col-sm-3 " style="margin-bottom: 10px">
                <div class="card mb-3" style="background-color:@item.CorCalendario" >
                    <div class="card-header" onclick="location.href = '@(Url.Action("ListaPedidos", "Pedidos", new { IdTecnico = item.Id }))'"> <h3>@item.NomeCompleto </h3></div>
                    <div class="card-body text-primary">
                        <p class="card-text">
                            <a class="btn btn-info btn-lg btn-block text-black-50" style=" font-size: 80%; border-radius: 5rem; letter-spacing: .1rem; font-weight: bold; padding: 1rem; transition: all 0.2s;" onclick="location.href = '@(Url.Action("ListaPedidos", "Pedidos", new { IdTecnico = item.Id }))'"><i class="fas fa-info float-left" style="margin-top:5px"></i> Lista</a>
                        </p>
                        <div class="card-footer">
                            <small>
                                Nome Utilizador: @item.NomeUtilizador | Email: <a href="mailto:@item.EmailUtilizador">@item.EmailUtilizador</a>
                            </small>
                        </div>
                    </div>
                </div>
            </div>*@
    }
</div>
}
