@model IEnumerable<FT_Management.Models.Utilizador>

@{
    ViewData["Title"] = "Pedidos - Lista de Técnicos";
}

<div class="container">
    <div class="columns">
        <div class="column">
            <div class="tile">
                <div class="tile is-parent is-vertical">
                    <article class="tile is-child notification is-info">
                        <p class="title">
                            <span class="icon mr-3">
                                <i class="fas fa-calendar-days"></i>
                            </span>
                            <span>Agendamento Técnico</span>
                        </p>
                    </article>
                </div>
            </div>
        </div>
        <div class="column my-auto">
            <div class="buttons is-right">
                <p class="control">
                    <a class="button is-info is-outlined" asp-action="Calendario">
                        <span class="icon">
                            <i class="fas fa-calendar-alt"></i>
                        </span>
                        <span>Calendário</span>
                    </a>
                </p>
                @if (this.User.IsInRole("Admin"))
                {
                    <p class="control">
                        <a asp-action="Adicionar" class="button is-primary is-outlined">
                            <span class="icon">
                                <i class="fas fa-plus"></i>
                            </span>
                            <span>Novo Agendamento</span>
                        </a>
                    </p>
                }
            </div>
        </div>
    </div>
</div>
<hr />

@if (Model.Count() == 0)
{
    <div class="container">
        <br />
        <button class="button is-danger is-outlined is-fullwidth">Não foram encontrados Técnicos!</button>
    </div>
        }
        else
        {
        <div class="container">
            <div class="columns is-multiline">
                @foreach (var item in Model)
                {
                    <div class="column is-4">
                        <div class="card">
                            <header class="card-header">
                                <p class="card-header-title">
                                    <span class="icon  mr-2">
                                        <i class="fas fa-user"></i>
                                    </span>
                                    <span>@item.NomeCompleto</span>
                                </p>
                                <a class="button is-primary is-rounded mx-2 my-2" onclick="location.href = '@(Url.Action("ListaPedidos", "Pedidos", new { IdTecnico = item.Id }))'">
                                    <span class="icon">
                                        <i class="fas fa-info"></i>
                                    </span>
                                    <span>Visualizar</span>
                                </a>
                            </header>
                        </div>
                    </div>
                }
            </div>
        </div>
        }

