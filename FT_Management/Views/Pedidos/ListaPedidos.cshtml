@model IEnumerable<FT_Management.Models.TrelloListas>

@{
    ViewData["Title"] = "Pedidos";
}

<h1>Pedidos</h1>

<form method="get" action="ListaPedidos">
    <div>
        <select class="form-control" id="SelectLista" asp-items="@(new SelectList(Model, "IdLista", "NomeLista", @ViewData["SelectedLista"]))" onchange="submitdata()" name="idlista"></select>
        <input type="hidden" id="hiddenQuadroID" value="@Model.First().IdQuadro" name="idQuadro" />
    </div>
</form>
<hr />

@if (Model.Count() == 0)
{
    <br />
    <button class="btn btn-lg btn-danger btn-block disabled">Não foram encontradas listas!</button>
}
else
{

    @foreach (var lista in Model)
    {
        <div class="row">
            @foreach (var item in lista.ListaCartoes)
            {

                <div class="col-sm-6 " style="margin-bottom: 10px">
                    <div class="card mb-3">
                        <div class="card-header @(item.CorLabel == "green" ? "card bg-success mb-3" : "") @(item.CorLabel == "yellow" ? "bg-warning" : "")@(item.CorLabel == "red" ? "bg-danger" : "")"> <h3>@item.NomeCartao </h3></div>
                        <div class="card-body text-primary">
                            <p class="card-text">
                                <a class="btn btn-info btn-lg btn-block text-black-50" onclick="location.href = '@(Url.Action("Pedido", "Pedidos", new { idCartao = item.IdCartao }))'"><i class="fas fa-info float-left" style="margin-top:5px"></i>Informação</a>
                                <hr />
                                <div class="btn-group-lg">
                                    <a class="btn btn-success btn-lg btn-block text-black-50 disabled" style="margin-right: 10px" onclick="validarPedido(@item.IdCartao, " 1")"><i class="fas fa-check float-left" style="margin-top:5px"></i>Serviço Concluido</a>
                                    <a class="btn btn-warning btn-lg btn-block text-black-50 disabled" style="margin-right: 10px" onclick="validarPedido( @item.IdCartao," 2")"><i class="fas fa-clock float-left" style="margin-top:5px"></i>Pendente</a>
                                    <a class="btn btn-danger btn-lg btn-block text-black-50 disabled" style="margin-right: 10px" onclick="validarPedido(@item.IdCartao, " 3")"><i class="fas fa-exclamation float-left" style="margin-top:5px"></i>Não Concluido</a>
                                </div>
                            </p>
                            <div class="card-footer">
                                <small>
                                    Lista: @lista.NomeLista
                                </small>
                            </div>
                        </div>
                    </div>
                </div>

            }
        </div>
    }
}
<div>
    <br />
    <a onclick="location.href = '@(Url.Action("Index", "Pedidos"))'">Voltar</a>

</div>


<script>

    function ChangeLista() {

        var lista = {
            idlista: $("#SelectLista").val(),
            id: document.getElementById("hiddenQuadroID").value
        };

        $.ajax({
            type: "POST",
            url: "/Pedidos/ListaPedidos",
            data: lista,
            traditional: true
        });
    }

    function submitdata() {
        $('form').submit();
    }
</script>
