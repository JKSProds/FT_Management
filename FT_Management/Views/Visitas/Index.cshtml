@model IEnumerable<FT_Management.Models.Utilizador>

@{
    ViewData["Title"] = "Visitas";
}


<div class="row">

    @if (this.User.IsInRole("Admin"))
    {
        <div class="col-lg-4">
            <h1>Visitas Comerciais</h1>
        </div>
        <div class="col-lg-4">
            <a class="btn btn-primary btn-lg btn-block text-white" style="margin:5px; font-size: 80%; border-radius: 5rem; letter-spacing: .1rem; font-weight: bold; padding: 1rem; transition: all 0.2s;" onclick="location.href = '@(Url.Action("Adicionar", "Visitas"))'"><i class="fas fa-plus" style="margin-top:5px"></i> Nova Visita</a>
        </div>
    }
    else
    {
        <div class="col-lg-8">
            <h1>Visitas Comerciais</h1>
        </div>
    }
    <div class="col-lg-4">
        <a class="btn btn-primary btn-lg btn-block text-white" style="margin: 5px; font-size: 80%; border-radius: 5rem; letter-spacing: .1rem; font-weight: bold; padding: 1rem; transition: all 0.2s;" onclick="location.href = '@(Url.Action("Calendario", "Visitas"))'"><i class="far fa-calendar-alt" style="margin-top:5px"></i> Calendário</a>
    </div>


</div>
<hr />
<br />

@if (Model.Count() == 0)
{
    <br />
    <button class="btn btn-lg btn-danger btn-block disabled" style=" font-size: 80%; border-radius: 5rem; letter-spacing: .1rem; font-weight: bold; padding: 1rem; transition: all 0.2s;">Não foram encontrados Comerciais!</button>
}
else
{
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-sm-6 " style="margin-bottom: 10px">
                <div class="card border-success mb-3">
                    <div class="card-header"> <h3>@item.NomeCompleto </h3></div>
                    <div class="card-body text-primary">
                        <p class="card-text">
                            <a class="btn btn-info btn-lg btn-block text-black-50" style=" font-size: 80%; border-radius: 5rem; letter-spacing: .1rem; font-weight: bold; padding: 1rem; transition: all 0.2s;" onclick="location.href = '@(Url.Action("ListaVisitas", "Visitas", new { IdComercial = item.Id }))'"><i class="fas fa-info float-left" style="margin-top:5px"></i> Lista</a>
                        </p>
                        <div class="card-footer">
                            <small>
                                Nome Utilizador: @item.NomeUtilizador | Email: <a href="mailto:@item.EmailUtilizador">@item.EmailUtilizador</a>
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
