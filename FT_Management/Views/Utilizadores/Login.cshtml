@model FT_Management.Models.Utilizador

@{
    ViewData["Title"] = "Iniciar Sessão";
}

<h1>Iniciar Sessão</h1>

<hr />

<form asp-action="Login">
    <div class="row">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group col-lg-6">
            <label asp-for="NomeUtilizador" class="control-label"></label>
            <input asp-for="NomeUtilizador" class="form-control" />
            <span asp-validation-for="NomeUtilizador" class="text-danger"></span>
        </div>
        <div class="form-group col-lg-6">
            <label asp-for="Password" class="control-label"></label>
            <input asp-for="Password" class="form-control" type="password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <input class="form-control d-none" value="@ViewData["ReturnUrl"]" name="ReturnUrl" />
        <div class="form-group">
            <input type="submit" value="Iniciar Sessão" class="btn btn-primary" />
        </div>
    </div>
</form>


