@model IEnumerable<FT_Management.Models.Utilizador>

@{
    ViewData["Title"] = "Utilizadores";
}



<div class="container">
    <div class="columns">
        <div class="column">
            <div class="tile">
                <div class="tile is-parent is-vertical">
                    <article class="tile is-child notification is-info">
                        <p class="title">
                            <span class="icon mr-3">
                                <i class="fas fa-user"></i>
                            </span>
                            <span>Utilizadores</span>
                        </p>
                    </article>
                </div>
            </div>
        </div>
    </div>
</div>
<hr />

@if (Model.Count() == 0)
{
    <div class="container">
        <br />
        <button class="button is-danger is-fullwidth" disabled>Não foram encontrados utilizadores!</button>
        </div>
        }
        else
        {
        <div class="container">
            <table class="table is-narrow is-hoverable is-fullwidth">
                <thead>
                    <tr>
                        <th>
                            Nome
                        </th>
                        <th>
                            Email
                        </th>
                        <th>
                            Ativo
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr onclick="location.href='@(Url.Action("Editar", "Utilizadores", new { id = item.Id}))'">
                            <td>
                                <span>@item.NomeCompleto</span>
                            </td>
                            <td>
                                <span>@item.EmailUtilizador</span>
                            </td>
                            <td>
                                <input type="checkbox" id="chkEnable_@item.Id" class="switch is-rounded is-info" checked="@item.Enable" onchange="AtualizarEnableUtilizador(@item.Id)">
                                <label></label>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        }

        <script>
        function AtualizarEnableUtilizador(id) {
            alert(id);
            alert(document.getElementById('chkEnable_' + id).checked);
        }
        </script>