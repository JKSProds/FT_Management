<script>
    function ValidarFolhaObra() {
        notify("A validar folha de obra ...");

        $.ajax({
            type: "POST",
            url: "/FolhasObra/Validar",
            data: $("#frmAdicionar").serialize(),
            contentType: 'application/x-www-form-urlencoded; charset=UTF-8',
            success: function (result) {
                Bulma('#modalValidarCliente').modal().close();
                $(function () {
                    document.getElementById("txtMensagens").value = result;
                    if (result != "") {
                        Bulma('#modalValidacao').modal().open();
                    } else {
                        notify("Folha de Obra sem mensagens de validação!");
                        document.getElementById('pageloader').classList.add('is-active');
                        document.getElementById('frmAdicionar').submit();
                    }
                });
            }
        });
    }

    function ValidarCliente() {
        document.getElementById('btnEstadoGarantia').parentElement.classList.remove('is-success');
        document.getElementById('btnEstadoGarantia').parentElement.classList.remove('is-danger');
        document.getElementById('btnEstadoGarantia').parentElement.classList.remove('is-info');

        if (document.getElementById('lstTipoFO').value == "Instalação") {
            document.getElementById('btnEstadoGarantia').innerHTML = 'INSTALAÇÃO';
            document.getElementById('btnEstadoGarantia').parentElement.classList.add('is-info')
        } else {
            document.getElementById('chkGarantia').checked ? document.getElementById('btnEstadoGarantia').innerHTML = 'GARANTIA' : document.getElementById('btnEstadoGarantia').innerHTML = 'NÃO GARANTIA';
            document.getElementById('chkGarantia').checked ? document.getElementById('btnEstadoGarantia').parentElement.classList.add('is-success') : document.getElementById('btnEstadoGarantia').parentElement.classList.add('is-danger');
        }

        document.getElementById('txtValidaEquipamento').value = document.getElementById('txtEquipamento').value;
        document.getElementById('txtValidaRelatorio').innerHTML = document.getElementById('txtRelatorio').value;

        document.getElementById('txtValidaIntervencoes').innerHTML = '';

        var periodo = 0;
        document.getElementById('divListaIntervencoes').childNodes.forEach(function (e) {
            if (e.childNodes[0]) {
                document.getElementById('txtValidaIntervencoes').innerHTML += e.childNodes[0].innerText + "<br>";


                var timeStart = moment(e.childNodes[0].innerText.split(' ')[0] + ' ' + e.childNodes[0].innerText.split(' ')[1], 'DD/MM/YYYY hh:mm', 'pt');
                var timeEnd = moment(e.childNodes[0].innerText.split(' ')[0] + ' ' + e.childNodes[0].innerText.split(' - ')[1], 'DD/MM/YYYY hh:mm', 'pt');

                periodo += moment.duration(timeEnd.diff(timeStart)).asHours();


                console.log(timeStart + ' - ' + timeEnd + ' | ' + periodo);
            }
        })
        document.getElementById('btnCountIntervencoes').innerHTML = "< " + Math.ceil(periodo) + " Hora(s)";

        document.getElementById('btnCountPecas').innerHTML = document.getElementById('divListaPecas').childNodes.length + " Peça(s)";
        document.getElementById('txtValidaPecas').innerHTML = '';
        document.getElementById('divListaPecas').childNodes.forEach(function (e) { if (e.childNodes[0]) document.getElementById('txtValidaPecas').innerHTML += e.childNodes[0].innerText + "<br>"; })


        Bulma('#modalValidarCliente').modal().open();
    }

    function DesbloquearEquipamentos() {
        if (!chkDesbloquearEquipamentos.checked) {
            notify('Listagem de equipamentos bloqueada!');
        } else {
            notify('Listagem de equipamentos desbloqueada!');
        }
    }
    //CODIGO DE VALIDACAO
    let interval;
    let time = 0;
    let stamp_codigo = '';
    function AtualizarTimer() {
        const minutes = Math.floor(time / 60);
        let seconds = time % 60;

        seconds = seconds < 10 ? '0' + seconds : seconds;

        document.getElementById('countdown').innerHTML = minutes + ':' + seconds;
        document.getElementById('pb_timer').value = time;
        time--;
        if (seconds % 10 === 0) ValidarCodigo(stamp_codigo);
        if (time <= 0) { clearInterval(interval); Bulma('#modalAguardarValidacao').modal().close(); notifyError("Por favor tente novamente. Excedeu o tempo limite para aprovação do código!"); };
    }

    function CriarCodigo(stamp) {
        $.ajax({
            type: "POST",
            url: "/FolhasObra/CriarCodigo/" + stamp,
            data: { "obs": document.getElementById("txtMensagens").value + "\r\n\r\nObservações do Técnico: " + document.getElementById("txtObs").value },
            success: function (result) {
                $(function () {
                    stamp_codigo = result;
                });
            }
        });
    }

    function ValidarCodigo(stamp) {
        $.ajax({
            type: "POST",
            url: "/FolhasObra/ValidarCodigo/" + stamp,
            success: function (result) {
                console.log(result);
                $(function () {
                    if (result.split("|")[0] == "1") {
                        notify("Código Aprovado pelo utilizador " + result.split("|")[1]);
                        clearInterval(interval);
                        Bulma('#modalAguardarValidacao').modal().close();
                        document.getElementById('pageloader').classList.add('is-active');
                        document.getElementById('frmAdicionar').submit();
                    } else if (result.split("|")[0] == "2") {
                        notifyError("Código Rejeitado pelo utilizador " + result.split("|")[1]);
                        clearInterval(interval);
                        Bulma('#modalAguardarValidacao').modal().close();
                    }
                });
            }
        });
    }

    function GerarCodigo() {
        if (document.getElementById('txtObs').value.length < 14) {
            notifyError('Informação insuficiente nas observaçoes. Por favor insira mais informação!');
        } else {
            CriarCodigo('@Model.Marcacao.MarcacaoStamp');
            time = 5 * 60;
            interval = setInterval(AtualizarTimer, 1000);
            document.getElementById('pb_timer').max = time;
            AtualizarTimer();

            Bulma('#modalValidacao').modal().close();
            Bulma('#modalAguardarValidacao').modal().open();
            notify("Código gerado com sucesso. A aguardar aprovação!");
            document.getElementById('txtObs').value = '';
        }
    }

    //VALIDACOES FINAIS DA FOLHA DE OBRA
    function AbrirMensagens() {
        if (document.getElementById('ListaIntervencoes').value == "") AdicionarIntervencao();
        document.getElementById('txtRubricaCliente').value = signaturePad.isEmpty() || signaturePad.toData().length == 0 ? document.getElementById('txtRubricaCliente').value : canvas.toDataURL().split(',')[1];

        $('#divFinalChk').find('input[type=checkbox]').each(function () {
