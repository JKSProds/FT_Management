@model FT_Management.Models.FolhaObra

@{
    ViewData["Title"] = "Nova Folha de Obra - " + @Model.ClienteServico.NomeCliente;
}

<link rel="stylesheet" href="~/lib/bulma-steps/dist/css/bulma-steps.min.css">
<script src="~/lib/bulma-steps/dist/js/bulma-steps.min.js"></script>

<style>
    .wrapper {
        position: relative;
        width: 400px;
        height: 200px;
        -moz-user-select: none;
        -webkit-user-select: none;
        -ms-user-select: none;
        user-select: none;
    }

    .signature-pad {
        position: absolute;
        left: 0;
        top: 0;
        width: 400px;
        height: 200px;
        background-color: white;
    }
</style>
<div class="pageloader is-success" id="pageloader"><span class="title">A gerar a folha de obra ...<br>POR FAVOR AGUARDE...</span></div>
<form asp-action="FolhaObra" method="POST" name="frmAdicionar" id="frmAdicionar">
    <div class="container">
        <div class="columns is-mobile is-centered">
            <div class="column is-12">
                <div class="tile">
                    <div class="tile is-parent is-vertical">
                        <article class="tile is-child notification is-info">
                            <p class="title">
                                <span class="icon mr-3">
                                    <i class="fas fa-plus-square"></i>
                                </span>
                                <span>Nova Folha de Obra - @Model.ClienteServico.NomeCliente</span>
                            </p>
                        </article>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <hr />
    <div class="container">
        <div class="steps is-small" id="stepsDemo">
            <div class="step-item is-active">
                <div class="step-marker">1</div>
                <div class="step-details">
                    <p class="step-title">Equipamento</p>
                </div>
            </div>
            <div class="step-item">
                <div class="step-marker">2</div>
                <div class="step-details">
                    <p class="step-title">Intervenção</p>
                </div>
            </div>
            <div class="step-item">
                <div class="step-marker">3</div>
                <div class="step-details">
                    <p class="step-title">Relatório</p>
                </div>
            </div>
            <div class="step-item">
                <div class="step-marker">4</div>
                <div class="step-details">
                    <p class="step-title">Peças</p>
                </div>
            </div>
            <div class="step-item">
                <div class="step-marker">5</div>
                <div class="step-details">
                    <p class="step-title">Outros</p>
                </div>
            </div>
            <div class="steps-actions">
                <div class="steps-action">
                    <button data-nav="previous" id="stepsPrevious" class="is-fullwidth button is-danger" type="button">
                        <span class="icon">
                            <i class="fas fa-arrow-left"></i>
                        </span>
                        <span>Anterior</span>
                    </button>
                </div>
                <div class="steps-action">
                    <button data-nav="next" id="stepsNext" onclick="resizeCanvas();"
                            class="is-fullwidth button is-success" type="button">
                        <span class="icon">
                            <i class="fas fa-arrow-right"></i>
                        </span>
                        <span>Próximo</span>
                    </button>
                </div>
            </div>
            <div class="steps-content">
                <div class="step-content is-active">
                    <div class="columns is-multiline mx-1">
                        <div class="column is-12">
                            <div class="field">
                                <label asp-for="EquipamentoServico" class="label"></label>
                                <p class="control has-icons-left has-icons-right">
                                    <input type="hidden" asp-for="EquipamentoServico.EquipamentoStamp"
                                           id="txtEquipamentoStamp" />
                                    <input type="text" class="input is-rounded" asp-for="EquipamentoServico.NumeroSerieEquipamento" id="txtEquipamento" placeholder="Insira o número de série">
                                    <span class="icon is-small is-left">
                                        <i class="fa-solid fa-magnifying-glass"></i>
                                    </span>
                                </p>
                            </div>
                            <span asp-validation-for="EquipamentoServico.EquipamentoStamp"
                                  class="has-text-danger"></span>
                        </div>
                        <div class="column is-6 my-auto">
                            <div class="field">
                                <label class="switch is-rounded is-medium">
                                    <input type="checkbox" id="chkDesbloquearEquipamentos" onchange="DesbloquearEquipamentos();">
                                    <span class="check is-success"></span>
                                    <span class="control-label">
                                        Pesquisar todos os Equipamentos
                                    </span>
                                </label>
                            </div>
                        </div>
                        <div class="column is-3 my-auto">
                            <div class="field">
                                <label class="switch is-rounded is-medium">
                                    <input type="checkbox" asp-for="EmGarantia" id="chkGarantia" onchange="document.getElementById('chkGarantiaSelecionadaPeca').checked = document.getElementById('chkGarantia').checked || document.getElementById('chkEquipamentoGarantia').checked;">
                                    <span class="check is-info"></span>
                                    <span class="control-label">
                                        @Html.DisplayNameFor(model => model.EmGarantia)
                                    </span>
                                </label>
                                <span asp-validation-for="EmGarantia" class="has-text-danger"></span>
                            </div>
                        </div>
                        @if (Model.ClienteServico.Contrato && Model.Marcacao.Contrato)
                            {
                        <div class="column is-3 my-auto">
                            <div class="field">
                                <label class="switch is-rounded is-medium">
                                    <input type="checkbox" asp-for="Contrato" onchange="document.getElementById('divExtraContrato').style.display = this.checked ? 'none' : 'block';">
                                    <span class="check is-info"></span>
                                    <span class="control-label">
                                        @Html.DisplayNameFor(model => model.Contrato)
                                    </span>
                                </label>
                                <span asp-validation-for="Contrato" class="has-text-danger"></span>
                            </div>
                        </div>
                        <div class="column is-12" id="divExtraContrato" style="display:@(Model.Contrato ? "none" : "block")">
                            <div class="field">
                                <label asp-for="JustExtraContrato" class="label"></label>
                                <p class="control has-icons-left">
                                    <span class="select" style="width: 100%">
                                        @{
                                            var LstExclusoes = ViewData["Exclusoes"] as IList<String>;
                                        }
                                        <select class="select" style="width:100%" asp-for="JustExtraContrato"
                                                asp-items="@(new SelectList(LstExclusoes))"></select>
                                    </span>
                                    <span class="icon is-small is-left">
                                        <i class="fa-solid fa-file-contract"></i>
                                    </span>
                                </p>
                                <span asp-validation-for="JustExtraContrato" class="has-text-danger"></span>
                            </div>
                        </div>
                            }
                        <div class="column is-12">
                            <div class="field">
                                <div class="control buttons">
                                    <button type="button" class="button is-info is-fullwidth" id="btnObterHistorico"
                                            onclick="ObterHistoricoEquipamento()" disabled>
                                        <span class="icon">
                                            <i class="fas fa-history"></i>
                                        </span>
                                        <span>Histórico de Manutenções</span>
                                    </button>
                                    <button type="button" class="button is-success is-fullwidth"
                                            id="btnObterEquipamentos" onclick="ObterEquipamentosCliente()">
                                        <span class="icon">
                                            <i class="fas fa-desktop"></i>
                                        </span>
                                        <span>Visualizar Equipamentos do Cliente</span>
                                    </button>
                                    <button class="button is-secondary is-fullwidth" type="button"
                                            onclick="LimparEquipamento()">
                                        <span class="icon">
                                            <i class="fa-solid fa-backspace"></i>
                                        </span>
                                        <span>Limpar</span>
                                    </button>
                                </div>

                            </div>
                           
                        </div>
                    </div>
                </div>
                <div class="step-content">
                    <div class="columns is-multiline mx-1">
                        <div class="column is-4">
                            <label asp-for="ListaIntervencoes" class="label"></label>
                            <input type="hidden" class="input" asp-for="ListaIntervencoes" id="ListaIntervencoes">
                            <div class="list has-visible-pointer-controls" id="divListaIntervencoes">
                            </div>
                            <button id="btnZeroIntervencoes"
                                    class="button is-danger my-1 is-large is-rounded is-fullwidth" disabled>
                                Sem Periodos
                            </button>
                            <span asp-validation-for="ListaIntervencoes" class="has-text-danger"></span>
                        </div>
                        <div class="column is-4">
                            <div class="field">
                                <div class="control">
                                    <input type="date" class="input "
                                           value="@(DateTime.Parse(Model.DataServico.ToString()).ToString("yyyy-MM-dd"))"
                                           asp-for="DataServico" id="txtData">
                                    <script>
                                        bulmaCalendar.attach('#txtData', {
                                            color: 'info',
                                            lang: 'pt',
                                            dateFormat: 'dd/MM/yyyy',
                                            todayLabel: 'Hoje',
                                            showClearButton: false,
                                            cancelLabel: 'Cancelar'
                                        });</script>
                                </div>
                                <span asp-validation-for="DataServico" class="has-text-danger"></span>
                            </div>
                        </div>
                        <div class="column is-4">
                            <div class="field">
                                <label>Inicio</label>
                                <div class="control">
                                    <input type="time" class="input" id="txtHoraInicio"
                                           value="@Model.IntervencaosServico.First().HoraInicio.ToShortTimeString()">
                                </div>
                            </div>
                            <div class="field">
                                <label>Fim</label>
                                <div class="control">
                                    <input type="time" class="input" id="txtHoraFim"
                                           value="@Model.IntervencaosServico.First().HoraFim.ToShortTimeString()">
                                </div>
                            </div>
                            <button type="button" onclick="AdicionarIntervencao()" class="button is-info is-fullwidth">
                                <span class="icon">
                                    <i class="fas fa-plus"></i>
                                </span>
                                <span>Adicionar Data & Hora</span>
                            </button>

                        </div>

                    </div>
                </div>
                <div class="step-content">
                    <div class="columns is-multiline mx-1">
                        <div class="column is-6">
                            <div class="field">
                                <label asp-for="RelatorioServico" class="label"></label>
                                <div class="control">
                                    <textarea class="textarea is-primary" rows="7"
                                              asp-for="RelatorioServico" id="txtRelatorio"></textarea>
                                </div>
                                <span asp-validation-for="RelatorioServico" class="has-text-danger"></span>
                            </div>
                        </div>
                        <div class="column is-6">
                            <div class="field">
                                <label asp-for="SituacoesPendentes" class="label"></label>
                                <div class="control">
                                    <textarea class="textarea is-primary" rows="7"
                                              asp-for="SituacoesPendentes"></textarea>
                                </div>
                                <span asp-validation-for="SituacoesPendentes" class="has-text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="step-content">
                    <div class="columns is-multiline mx-1">
                        <div class="column is-12">
                            <div class="field">
                                <label asp-for="PecasServico" class="label"></label>
                                <p class="control has-icons-left has-icons-right">
                                    <input type="hidden" class="input" id="txtStampPeca">
                                    <input type="text" class="input is-rounded" placeholder="Insira a referência" id="txtPecas">
                                    <span class="icon is-small is-left">
                                        <i class="fa-solid fa-magnifying-glass"></i>
                                    </span>
                                </p>
                            </div>
                            <div class="field ">
                                <div class="field has-addons is-pulled-right mb-2">
                                    <div class="control">
                                        <label class="switch is-rounded">
                                            <input type="checkbox" id="chkGarantiaSelecionadaPeca" onchange="document.getElementById('chkPecaGarantia').checked = this.checked;">
                                            <span class="check is-info"></span>
                                            <span class="control-label">
                                                Garantia?
                                            </span>
                                        </label>
                                    </div>
                                    <div class="control">
                                        <button type="button" class="button is-danger disable-dbl-tap-zoom"
                                                onclick="document.getElementById('txtQtd').value = parseInt(document.getElementById('txtQtd').value) - 1">
                                            <span class="icon">
                                                <i class="fas fa-minus"></i>
                                            </span>
                                        </button>
                                    </div>
                                    <div class="control" style="width:75px">
                                        <input type="number" class="input has-text-centered" id="txtQtd" value="1">
                                    </div>
                                    <div class="control">
                                        <button type="button" class="button is-success disable-dbl-tap-zoom"
                                                onclick="document.getElementById('txtQtd').value = parseInt(document.getElementById('txtQtd').value) + 1">
                                            <span class="icon">
                                                <i class="fas fa-plus"></i>
                                            </span>
                                        </button>
                                    </div>
                                    <div class="control">
                                        <a class="button is-info"
                                           onclick="Bulma('#modalLerBarcode').modal().open();iniciarScan();">
                                            <i class="fa-solid fa-qrcode"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <div class="control buttons">
                                <button class="button is-info is-fullwidth" type="button"
                                        onclick="if (document.getElementById('chkGarantiaSelecionadaPeca').checked || document.getElementById('chkGarantia').checked) { document.getElementById('chkPecaGarantia').checked = document.getElementById('chkGarantiaSelecionadaPeca').checked; document.getElementById('lstMotivosAvariaGarantia').parentElement.parentElement.parentElement.hidden = !document.getElementById('chkGarantiaSelecionadaPeca').checked; document.getElementById('lstMotivosAvariaNaoGarantia').parentElement.parentElement.parentElement.hidden = document.getElementById('chkGarantiaSelecionadaPeca').checked;Bulma('#modalPecaGarantia').modal().open(); } else {
        ObterPeca(document.getElementById('txtStampPeca').value, document.getElementById('txtQtd').value, false, '', '');
                                        }"
                                        disabled id="btnAdicionarPeca">
                                    <span class="icon">
                                        <i class="fa-solid fa-check"></i>
                                    </span>
                                    <span>Adicionar Peça</span>
                                </button>
                                <button type="button" class="button is-success is-fullwidth"
                                        onclick="Bulma('#modalPecas').modal().open();">
                                    <span class="icon">
                                        <i class="fa-solid fa-list-ul"></i>
                                    </span>
                                    <span>Visualizar Stock</span>
                                </button>
                                <button class="button is-secondary is-fullwidth" type="button" onclick="LimparPecas()">
                                    <span class="icon">
                                        <i class="fa-solid fa-backspace"></i>
                                    </span>
                                    <span>Limpar</span>
                                </button>
                            </div>
                            <div class="column is-12">
                                <label asp-for="ListaPecas" class="label"></label>
                                <input type="hidden" class="input" asp-for="ListaPecas" id="ListaPecas">
                                <div class="list has-visible-pointer-controls" id="divListaPecas">
                                </div>
                                <button id="btnZeroPecas" class="button is-danger my-1 is-large is-rounded is-fullwidth"
                                        disabled>
                                    Sem Peças
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="step-content">
                    <div class="columns is-multiline mx-1">
                        <div class="column is-6">
                            <div class="field">
                                <label asp-for="EstadoFolhaObra" class="label"></label>
                                <p class="control has-icons-left">
                                    <span class="select" style="width:100%">
                                        <select asp-for="EstadoFolhaObra" id="lstEstadoFO" asp-items="ViewBag.EstadoFolhaObra"
                                                class="form-control" style="width:100%">
                                        </select>
                                    </span>
                                    <span class="icon is-small is-left">
                                        <i class="fas fa-hourglass"></i>
                                    </span>
                                </p>
                                <span asp-validation-for="EstadoFolhaObra" class="has-text-danger"></span>
                            </div>
                        </div>
                        <div class="column is-6">
                            <div class="field">
                                <label asp-for="TipoFolhaObra" class="label"></label>
                                <p class="control has-icons-left">
                                    <span class="select" style="width:100%">
                                        @{
                                            var LstTipoFolhaObra = ViewData["TipoFolhaObra"] as IList<String>;
                                        }
                                        <select class="select" id="lstTipoFO" style="width:100%" asp-for="TipoFolhaObra"
                                                asp-items="@(new SelectList(LstTipoFolhaObra))"></select>
                                    </span>
                                    <span class="icon is-small is-left">
                                        <i class="fas fa-hourglass"></i>
                                    </span>
                                </p>
                                <span asp-validation-for="TipoFolhaObra" class="has-text-danger"></span>
                            </div>
                        </div>
                        <div class="column is-12">
                            <div class="field">
                                <p class="control">
                                    <button type="button" class="mb-3 button is-warning is-large is-pulled-right is-fullwidth"
                                            onclick="Bulma('#modalAdicionarAnexo').modal().open();">
                                        <span class="icon is-small">
                                            <i class="fa-solid fa-paperclip"></i>
                                        </span>
                                        <span>Adicionar Anexos</span>
                                    </button>
                                </p>
                            </div>
                        </div>
                        &nbsp;
                        <button type="button" onclick="AbrirMensagens();" class="button is-info is-large is-fullwidth">
                            <span class="icon">
                                <i class="fas fa-plus"></i>
                            </span>
                            <span>Criar Folha de Obra</span>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div style="display:none">
        <div class="columns is-multiline mx-1 ">
            <input type="text" class="input" asp-for="FicheirosAnexo" id="Ficheiros">
            <input type="text" class="input" asp-for="ClienteServico.NomeCliente" id="txtIdCliente" />
            <input type="text" class="input" asp-for="ClienteServico.IdCliente" id="txtIdCliente" />
            <input type="text" class="input" asp-for="ClienteServico.IdLoja" id="txtIdLoja" />
            <input type="text" class="input" asp-for="ReferenciaServico">
            <input type="text" class="input" asp-for="IdMarcacao">
            <input type="text" class="input" asp-for="RubricaCliente" id="txtRubricaCliente">
            <input type="checkbox" class="checkbox" asp-for="Piquete" id="chkPiquete">
            <input type="checkbox" class="checkbox" asp-for="ClienteServico.Contrato" >
            <input type="checkbox" class="checkbox" asp-for="Marcacao.Contrato">
            <input type="checkbox" class="checkbox" asp-for="EquipamentoServico.Garantia" id="chkEquipamentoGarantia" onchange="document.getElementById('chkGarantiaSelecionadaPeca').checked = document.getElementById('chkGarantia').checked || document.getElementById('chkEquipamentoGarantia').checked;">

            <div id="divChk">
                <input type="checkbox" asp-for="Avisar" id="chkAvisar">
                <input type="checkbox" asp-for="FecharMarcacao" id="chkFecharMarcacao">
                <input type="checkbox" id="chkEnviarEmail" asp-for="EnviarEmail">
                <input type="checkbox" id="chkRecolhaOficina" asp-for="RecolhaOficina">
                <input type="checkbox" id="chkGuia" asp-for="Guia">
                <input type="checkbox" id="chkCobrarDeslocacao" asp-for="CobrarDeslocacao">
                <input type="checkbox" id="chkGuardarLocalizacao" asp-for="GuardarLocalizacao">
            </div>
        </div>
    </div>

    <div class="modal" id="modalFinal">
        <div class="modal-background"></div>
        <div class="modal-card">
            <header class="modal-card-head">
                <p class="modal-card-title">Verificações Finais</p>
                <button class="delete" type="button" aria-label="close"></button>
            </header>
            <section class="modal-card-body" id="divFinalChk">
                <div id="divEncaminhar" hidden class="field">
                    <div class="field">
                        <label class="switch is-rounded">
                            <input type="checkbox" onchange="document.getElementById('chkAvisar').checked = this.checked;">
                            <span class="check is-info"></span>
                            <span class="control-label">
                                Deseja encaminhar o pedido para resolução por parte do cliente?
                            </span>
                        </label>
                    </div>
                    <span asp-validation-for="EnviarEmail" class="has-text-danger"></span>
                </div>
                <div id="divLocalizacao" hidden class="field">
                    <div class="field">
                        <label class="switch is-rounded">
                            <input type="checkbox" onchange="document.getElementById('chkGuardarLocalizacao').checked = this.checked;">
                            <span class="check is-info"></span>
                            <span class="control-label">
                                Deseja guardar a localização atual do cliente?
                                <input class="input is-primary" type="text" disabled
                                       asp-for="Utilizador.Viatura.LocalizacaoMorada" />
                                <a class="button is-static">
                                    @Model.Utilizador.Viatura.Matricula
                                </a>
                            </span>
                        </label>
                    </div>
                    <span asp-validation-for="GuardarLocalizacao" class="has-text-danger"></span>
                </div>
                <div id="divDeslocacao" hidden class="field">
                    <div class="field">
                        <label class="switch is-rounded">
                            <input type="checkbox" onchange="document.getElementById('chkCobrarDeslocacao').checked = this.checked;">
                            <span class="check is-info"></span>
                            <span class="control-label">
                                Deseja cobrar a deslocação a este cliente?
                            </span>
                        </label>
                    </div>
                    <span asp-validation-for="CobrarDeslocacao" class="has-text-danger"></span>
                </div>
                <div id="divEmail" hidden class="field">
                    <div class="field">
                        <label class="switch is-rounded">
                            <input type="checkbox" onchange="document.getElementById('chkEnviarEmail').checked = this.checked;">
                            <span class="check is-info"></span>
                            <span class="control-label">
                                Deseja enviar um email com a folha de obra para o cliente?
                            </span>
                        </label>
                    </div>
                    <span asp-validation-for="EnviarEmail" class="has-text-danger"></span>
                </div>
                <div id="divRecolher" hidden class="field">
                    <div class="field">
                        <label class="switch is-rounded">
                            <input type="checkbox" asp-for="RecolhaOficina" onchange="document.getElementById('divGuia').hidden = !this.checked; document.getElementById('chkRecolhaOficina').checked = this.checked;">
                            <span class="check is-info"></span>
                            <span class="control-label">
                                Deseja recolher o equipamento selecionado para oficina?
                            </span>
                        </label>
                    </div>
                    <span asp-validation-for="RecolhaOficina" class="has-text-danger"></span>
                </div>
                <div id="divGuia" hidden class="field">
                    <div class="field">
                        <label class="switch is-rounded">
                            <input type="checkbox" onchange="document.getElementById('chkGuia').checked = this.checked;">
                            <span class="check is-info"></span>
                            <span class="control-label">
                                Deseja gerar guia de transporte para o equipamento selecionado?
                            </span>
                        </label>
                    </div>
                    <span asp-validation-for="Guia" class="has-text-danger"></span>
                </div>
                <div id="divFechar" hidden class="field">
                    <label class="switch is-rounded">
                        <input type="checkbox" onchange="document.getElementById('chkFecharMarcacao').checked = this.checked;">
                        <span class="check is-info"></span>
                        <span class="control-label">
                            Deseja dar como concluida a assistência atual?
                        </span>
                    </label>
                    <span asp-validation-for="FecharMarcacao" class="has-text-danger"></span>
                </div>
            </section>
            <footer class="modal-card-foot">
                <button class="button is-large is-fullwidth is-success" type="button" onclick="Bulma('#modalFinal').modal().close();ValidarCliente();">
                    <span class="icon">
                        <i class="fa-solid fa-floppy-disk fa-beat-fade"></i>
                    </span>
                    <span>Guardar</span>
                </button>
