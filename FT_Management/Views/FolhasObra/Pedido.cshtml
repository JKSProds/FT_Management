@model FT_Management.Models.Dossier

@{
    ViewData["Title"] = @Model.NomeDossier + " Nº " + Model.IdDossier;
}

<div class="container">
    <div class="columns">
        <div class="column">
            <div class="tile">
                <div class="tile is-parent is-vertical">
                    <article class="tile is-child notification is-info">
                        <p class="title">
                            <span class="icon mr-3">
                                <i class="fas fa-file-alt"></i>
                            </span>
                            <span>@Model.NomeDossier Nº @Model.IdDossier</span>
                        </p>
                    </article>
                </div>
            </div>
        </div>
        <div class="column is-8 is-right my-auto">
            <div class="field has-addons has-addons-right mx-1 is-flex-wrap-wrap">
                <p class="control has-icons-left">
                    <input type="text" class="input" asp-for="Cliente.NomeCliente" readonly>
                    <span class="icon is-small is-left">
                        <i class="fa-solid fa-arrow-down-a-z"></i>
                    </span>
                </p>
                <p class="control has-icons-left">
                    <input type="date" class="input" asp-for="DataDossier" readonly>
                    <span class="icon is-small is-left">
                        <i class="fa-solid fa-calendar-day"></i>
                    </span>
                </p>
                <p class="control has-icons-left">
                    <input type="text" class="input" asp-for="Referencia" readonly>
                    <span class="icon is-small is-left">
                        <i class="fa-solid fa-arrow-down-a-z"></i>
                    </span>
                </p>
                <p class="control has-icons-left">
                    <input type="text" class="input" asp-for="Tecnico.NomeCompleto" readonly>
                    <span class="icon is-small is-left">
                        <i class="fa-solid fa-user"></i>
                    </span>
                </p>
                <p class="control has-addons has-icons-left">
                    <input type="text" class="input" asp-for="Marcacao.IdMarcacao" readonly>
                    <span class="icon is-small is-left">
                        <i class="fa-solid fa-calendar-check"></i>
                    </span>

                <div class="control">
                    <a class="button is-info" href="~/Pedidos/Pedido/@Model.Marcacao.IdMarcacao">
                        <i class="fa-solid fa-square-up-right"></i>
                    </a>
                </div>
                </p>
                <p class="control has-addons has-icons-left">
                    <input type="text" class="input" asp-for="FolhaObra.IdFolhaObra" readonly>
                    <span class="icon is-small is-left">
                        <i class="fa-solid fa-file-alt"></i>
                    </span>

                <div class="control">
                    <a class="button is-info" href="~/FolhasObra/Detalhes/@Model.FolhaObra.IdFolhaObra">
                        <i class="fa-solid fa-square-up-right"></i>
                    </a>
                </div>
                </p>
            </div>
            <div class="buttons is-right">
                <p class="control">
                    <button class="button is-primary is-info" type="button">
                        <span class="icon">
                            <i class="fas fa-plus fa-lg"></i>
                        </span>
                        <span>Adicionar Referência</span>
                    </button>
                </p>
                <p class="control">
                    <button type="button" class="button is-info is-outlined">
                        <span class="icon">
                            <i class="fa-solid fa-square-plus"></i>
                        </span>
                        <span>Adicionar Linha</span>
                    </button>
                </p>
                <p class="control">
                    <button class="button is-success" type="button">
                        <span class="icon">
                            <i class="fa-solid fa-table-list"></i>
                        </span>
                        <span>Lista de Referências</span>
                    </button>
                </p>
                <p class="control">
                    <button class="button is-warning" type="button">
                        <span class="icon">
                            <i class="fa-solid fa-link"></i>
                        </span>
                        <span>Anexos</span>
                    </button>
                </p>
            </div>
        </div>
    </div>
</div>
</div>
<hr />
@if (Model.Linhas.Count() == 0)
{
    <div class="container">
    <br />
    <button class="button is-danger is-fullwidth" disabled>Não foram encontradas linhas!</button>
</div>
}
else
{
    <div class="container">
    @foreach (var item in Model.Linhas.Where(l => string.IsNullOrEmpty(l.Referencia) && l.Quantidade == 0))
        {
            <p class="control mx-2 my-2">
                <input type="text" class="input" value="@item.Designacao" readonly>
            </p>
        }

        @if (Model.Linhas.Where(l => !string.IsNullOrEmpty(l.Referencia)).Count() > 0)
        {
            <div class="b-table">
                <div class="table-wrapper has-mobile-cards">
                    <table class="table is-hoverable is-fullwidth">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Linhas.First().Referencia)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Linhas.First().Designacao)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Linhas.First().Quantidade)
                                </th>
                                <th>

                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Linhas.Where(l => !string.IsNullOrEmpty(l.Referencia)))
                            {
                                <tr>
                                    <td data-label="@Html.DisplayNameFor(model => model.Linhas.First().Referencia)">
                                        <span>@item.Referencia</span>
                                    </td>
                                    <td data-label="@Html.DisplayNameFor(model => model.Linhas.First().Designacao)">
                                        @Html.DisplayFor(modelItem => item.Designacao)
                                    </td>
                                    <td data-label="@Html.DisplayNameFor(model => model.Linhas.First().Quantidade)">
                                        @Html.DisplayFor(modelItem => item.Quantidade)
                                    </td>

                                    <td class="is-actions-cell">

                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

        }
        else
        {
            <div class="container">
                <br />
                <button class="button is-danger is-fullwidth" disabled>Não foram encontradas referências!</button>
            </div>
        }
    </div>
}
