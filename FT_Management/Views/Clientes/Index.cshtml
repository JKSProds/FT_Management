@model IEnumerable<FT_Management.Models.Cliente>

@{
    ViewData["Title"] = "Clientes";
}
<form asp-action="Index" method="get">
    <div class="container">
        <div class="columns">
            <div class="column">
                <div class="tile">
                    <div class="tile is-parent is-vertical">
                        <article class="tile is-child notification is-info">
                            <p class="title">
                                <span class="icon mr-3">
                                    <i class="fas fa-user-tie"></i>
                                </span>
                                <span>Clientes</span>
                            </p>
                        </article>
                    </div>
                </div>
            </div>
            <div class="column">
                <div class="field has-addons has-addons-right mx-1">
                    <p class="control has-icons-left">
                        <input type="text" class="input" placeholder="Nome do Cliente" aria-label="Nome do Cliente" aria-describedby="button-addon4" name="Nome" value="@ViewData["Nome"]">
                        <span class="icon is-small is-left">
                            <i class="fa-solid fa-arrow-down-a-z"></i>
                        </span>
                    </p>
                </div>
                <div class="buttons is-right">
                    <p class="control">
                        <button type="submit" class="button is-info is-outlined">
                            <span class="icon">
                                <i class="fas fa-search fa-lg"></i>
                            </span>
                            <span>Pesquisar</span>
                        </button>
                    </p>
                    <p class="control">
                        <button type="button" onclick="window.location.href = '/Clientes'" class="button is-outlined">
                            <span class="icon">
                                <i class="fas fa-backspace fa-lg"></i>
                            </span>
                            <span>Limpar Pesquisa</span>
                        </button>
                    </p>
                </div>
            </div>
        </div>
    </div>
</form>
<hr />
<div class="container">
    @if (Model.Count() == 0)
    {
        <br />
        <button class="button is-danger is-fullwidth is-disabled">Não foram encontrados clientes!</button>
    }
    else
    {
          <div class="b-table">
            <div class="table-wrapper has-mobile-cards">
        <table class="table is-hoverable is-fullwidth">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.IdCliente)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.NomeCliente)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TelefoneCliente)
                    </th>
                    <th>

                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td data-label="@Html.DisplayNameFor(model => model.IdCliente)" onclick="window.open('@(Url.Action("Cliente", "Clientes", new { IdCliente = item.IdCliente, IdLoja = item.IdLoja, target="_blank" }))')">
                            <span>@item.IdCliente - @item.IdLoja</span>
                        </td>
                        <td data-label="@Html.DisplayNameFor(model => model.NomeCliente)" onclick="window.open('@(Url.Action("Cliente", "Clientes", new { IdCliente = item.IdCliente, IdLoja = item.IdLoja, target="_blank" }))')">
                            @Html.DisplayFor(modelItem => item.NomeCliente)
                        </td>
                        <td data-label="@Html.DisplayNameFor(model => model.TelefoneCliente)" onclick="window.open('@(Url.Action("Cliente", "Clientes", new { IdCliente = item.IdCliente, IdLoja = item.IdLoja, target="_blank" }))')">
                            @Html.DisplayFor(modelItem => item.TelefoneCliente)
                        </td>
                        <td class="is-actions-cell">
                            <div class="btn-group float-right">
                                <a class="button is-info is-outlined @(item.TelefoneCliente.Length < 9 ? "disabled" : "")" href="tel:@item.TelefoneCliente"><i class="fas fa-phone float-left" style="margin-top:5px"></i></a>
                                <a class="button is-primary is-outlined" href="@Utilizador.ObterLinkMapa(item, User.Claims.Where(u => u.Type.Contains("userdata")).First().Value)"><i class="fas fa-location-arrow float-left" style="margin-top:5px"></i></a>
                            </div>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
        </div>
        </div>
    }
</div>
