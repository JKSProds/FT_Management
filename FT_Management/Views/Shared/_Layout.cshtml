                                {
                                    <div class="navbar-item">
                                        <a class="button is-light is-fullwidth" href="~/Utilizadores">
                                            <span class="icon">
                                                <i class="fas fa-gear"></i>
                                            </span>
                                            <span>Utilizadores</span>
                                        </a>
                                    </div>
                                }
