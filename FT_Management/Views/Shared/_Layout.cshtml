</html>

<script>
    var printscreenData = "";
    function captura() {
        Bulma('#modalSugestoes').modal().close();
        html2canvas(document.body).then((canvas) => {
            EnviarSugestao(canvas.toDataURL("image/png"));
        });
    }

    function EnviarSugestao(base64) {

        $.ajax({
            url: '/Utilizadores/NovaSugestao',
            type: "POST",
            data: { "obs": document.getElementById('txtObs').value, "file": base64 },
            success: function (data) {
                if (data == "Ok") {
                    bulmaToast.toast({
                        message: 'Sugestão enviada com sucesso!',
                        type: 'is-success',
                        closeOnClick: true,
                        pauseOnHover: true,
                        opacity: 0.8,
                        duration: 5000
                    });
                }
            },
            error: function (data) {
                bulmaToast.toast({
                    message: 'Ocorreu um erro ao enviar a sugestão. Por favor tente novamente!',
                    type: 'is-danger',
                    closeOnClick: true,
                    pauseOnHover: true,
                    opacity: 0.8,
                    duration: 5000
                });
            },
            failure: function (data) {
                bulmaToast.toast({
                    message: 'Ocorreu um erro ao enviar a sugestão. Por favor tente novamente!',
                    type: 'is-danger',
                    closeOnClick: true,
                    pauseOnHover: true,
                    opacity: 0.8,
                    duration: 5000
                });
            }
        });
    }
</script>