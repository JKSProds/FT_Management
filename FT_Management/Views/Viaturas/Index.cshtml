@model IEnumerable<FT_Management.Models.Viatura>


@{
    ViewData["Title"] = "Viaturas";
}
<form asp-action="Index" method="get">
    <div class="container">
        <div class="columns">
            <div class="column">
                <div class="tile">
                    <div class="tile is-parent is-vertical">
                        <article class="tile is-child notification is-info">
                            <p class="title">
                                <span class="icon mr-3">
                                    <i class="fa-solid fa-car"></i>
                                </span>
                                <span>Viaturas</span>
                            </p>
                        </article>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
<hr />
<div class="container">
    @if (Model.Count() == 0)
    {
        <br />
        <button class="button is-danger is-fullwidth is-disabled">Não foram encontradas viaturas!</button>
    }
    else
    {
        <div class="b-table">
            <div class="table-wrapper has-mobile-cards">
                <table class="table is-hoverable is-fullwidth">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Matricula)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Utilizador.NomeCompleto)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.LocalizacaoMorada)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.KmsAtuais)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.UltimoUpdate)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr @(item.Ignicao ? "class=has-background-success" : "")>
                                <td data-label="@Html.DisplayNameFor(model => model.Matricula)">
                                    <span>@item.Matricula</span>
                                </td>
                                <td data-label="@Html.DisplayNameFor(model => model.Utilizador.NomeCompleto)">
                                    @Html.DisplayFor(modelItem => item.Utilizador.NomeCompleto)
                                </td>
                                <td data-label="@Html.DisplayNameFor(model => model.LocalizacaoMorada)">
                                    @Html.DisplayFor(modelItem => item.LocalizacaoMorada)
                                </td>
                                <td data-label="@Html.DisplayNameFor(model => model.KmsAtuais)">
                                    @Html.DisplayFor(modelItem => item.KmsAtuais)
                                </td>
                                <td data-label="@Html.DisplayNameFor(model => model.UltimoUpdate)">
                                    @Html.DisplayFor(modelItem => item.UltimoUpdate)
                                </td>
                                <td class="is-actions-cell">
                                    <label class="switch is-rounded">
                                        <input type="checkbox" checked="@item.Buzzer" id="chk_Buzzer_@item.Matricula"
                                            onchange="AtualizarBuzzer('@item.Matricula')">
                                        <span class="check is-primary"></span>
                                        <span class="control-label">@Html.DisplayNameFor(model => model.Buzzer)</span>
                                    </label>
                                    <a class="button is-warning" href="~/Viaturas/Viagens/@item.Matricula"><i
                                            class="fas fa-eye"></i></a>
                                    <a class="button is-info" href="@item.GetUrl"><i class="fa-solid fa-location-arrow"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>

<script>
    function AtualizarBuzzer(matricula) {
        document.getElementById('chk_Buzzer_' + matricula).disabled = true;
        $.ajax({
            type: "POST",
            url: "/Viaturas/AtualizarBuzzer/" + matricula,
            data: { buzzer: document.getElementById('chk_Buzzer_' + matricula).checked },
            traditional: true,
            success: function (result) {
                $(function () {
                    if (result == "1") {
                        bulmaToast.toast({
                            message: 'Atualizado estado do buzzer com sucesso! This endpoint should not be called more than once every 5 minutes to prevent hardware failures.',
                            type: 'is-success',
                            closeOnClick: true,
                            pauseOnHover: true,
                            opacity: 0.8,
                            duration: 15000
                        })
                    } else {
                        bulmaToast.toast({
                            message: 'Erro ao atualizar o estado do buzzer!',
                            type: 'is-danger',
                            closeOnClick: true,
                            pauseOnHover: true,
                            opacity: 0.8,
                            duration: 5000
                        })
                    }
                    document.getElementById('chk_Buzzer_' + matricula).disabled = false;
                });
            }
        });
    }
</script>
