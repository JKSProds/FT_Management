<div class="modal" id="modalNovoPicking">
  <div class="modal-background"></div>
  <div class="modal-card">
    <header class="modal-card-head">
      <p class="modal-card-title">Picking</p>
    </header>
    <section class="modal-card-body">
      <p>Tem a certeza que deseja gerar um documento de Picking?</p>
    </section>
    <footer class="modal-card-foot">
      <button class="button is-success" onclick="NovoPicking(document.getElementById('txtIdEncomenda').value)">Sim</button>
      <button class="button" onclick="Bulma('#modalNovoPicking').modal().close();">Não</button>
    </footer>
  </div>
</div>

<div class="modal" id="modalFecharPicking">
  <div class="modal-background"></div>
  <div class="modal-card">
    <header class="modal-card-head">
      <p class="modal-card-title">Picking</p>
    </header>
    <section class="modal-card-body">
    <div class="control"><textarea type="text" class="textarea" id="txtMensagens" readonly rows=8 value=""></textarea></div>
    <hr />
      <p>Tem a certeza que deseja fechar o documento de Picking?</p> 
  </section>
    <footer class="modal-card-foot">
      <button class="button is-success" onclick="FecharPicking(document.getElementById('txtIdPicking').value)">Sim</button>
      <button class="button" onclick="Bulma('#modalFecharPicking').modal().close();">Não</button>
    </footer>
  </div>
</div>

<script>
    document.getElementById("ddlTipo").value = @ViewData["Tipo"];

    function ConfirmNovoPicking(id) {
            document.getElementById('txtIdEncomenda').value = id;
            Bulma('#modalNovoPicking').modal().open();
    }
    function NovoPicking(id) {
            Bulma('#modalNovoPicking').modal().close();
             window.open('Picking/Adicionar/' + id, '_blank');
    }

        function ConfirmFecharPicking(id) {
            document.getElementById('txtIdPicking').value = id;
            $.ajax({
            type: "POST",
            url: "/Picking/ValidarPicking/" + id,
            success: function (result) {
                $(function () {
                    if (result != "") {
                        document.getElementById("txtMensagens").value = result;
                    } else {
                        document.getElementById("txtMensagens").value = "Não foram encontrados problemas!";
                    }
                     Bulma('#modalFecharPicking').modal().open();
                });
            }
        });

    }

    function FecharPicking(id) {
            Bulma('#modalFecharPicking').modal().close();
            $.ajax({
                url: '/Picking/Fechar/' + id,
                type: "POST",
                success: function (data) {
                    window.location.reload();
                }
            });
    }
</script>