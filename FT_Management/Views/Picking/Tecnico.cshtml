@model FT_Management.Models.Utilizador

@{
    ViewData["Title"] = "Picking - " + Model.NomeCompleto;
}
    <div class="container">
        <div class="columns">
            <div class="column">
                <div class="tile">
                    <div class="tile is-parent is-vertical">
                        <article class="tile is-child notification is-info">
                            <p class="title">
                                <span class="icon mr-3">
                                   <i class="fa-solid fa-barcode"></i>
                                </span>
                                <span>Picking - @Model.NomeCompleto</span>
                            </p>
                        </article>
                    </div>
                </div>
            </div>
        </div>
    </div>
<hr />

        <div class="b-table">
            <div class="table-wrapper has-mobile-cards">
                <table class="table is-fullwidth">
                    <thead>
                        <tr>
                            
                            <th>@Html.DisplayNameFor(model => Model.Linhas.FirstOrDefault().Referencia)</th>
                            <th>@Html.DisplayNameFor(model => Model.Linhas.FirstOrDefault().Designacao)</th>
                            <th>Pedido</th>
                            <th>Fornecer</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var linha in Model.Linhas)
                            {
                            <tr>
                                
                                <td data-label="@Html.DisplayNameFor(model => Model.Linhas.FirstOrDefault().Referencia)">@linha.Referencia                                                    </td>
                                <td data-label="@Html.DisplayNameFor(model => Model.Linhas.FirstOrDefault().Designacao)">@linha.Designacao</td>
                                <td data-label="Pedido">@linha.Quantidade</td>
                                <td data-label="Fornecer">
                                    <div class="control">
                                            <input type="number" class="input is-large is-rounded" value="@linha.Quantidade"/>
                                    </div>
                                </td>
                                <td class="is-actions-cell">
                                    <button type="button" class="button is-success is-large is-rounded">
                                        <span class="icon">
                                   <i class="fa-solid fa-check"></i>
                                </span>
                                    </button>
                                </td>
                            </tr>
                            }
                    </tbody>
                </table>
            </div>
        </div>

<br>
<a class="button is-large is-info is-rounded is-fullwidth" onclick="ValidarCriarTV('@Model.Id')">
    <span class="icon is-small">
        <i class="fa-solid fa-check"></i>
    </span>
    <span>Criar Transferência em Viagem</span>
</a>


